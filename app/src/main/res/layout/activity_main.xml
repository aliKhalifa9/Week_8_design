<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="658dp"
        android:background="@drawable/corner"
        android:orientation="vertical"
        android:paddingTop="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="79dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="95dp"
                android:layout_height="93dp"
                android:layout_marginStart="30dp"
                android:background="@drawable/corner"
                android:src="@drawable/main_photo"
                app:shapeAppearanceOverlay="@style/corner" />

            <LinearLayout
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5sp"
                    android:gravity="center"
                    android:text="@string/ali_khalifa"
                    android:textColor="@color/black"
                    android:textSize="35sp" />

                <TextView
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:text="@string/country"
                    android:textColor="#9A9A9A"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="191dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/corner_icon"
                        android:elevation="5dp"
                        android:padding="5dp"
                        android:src="@drawable/call_icon"
                        app:tint="#1E88E5" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/corner_icon"
                        android:elevation="5dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_facebook_messenger_5"
                        app:tint="#1E88E5" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/corner_icon"
                        android:elevation="5dp"
                        android:src="@drawable/ic_baseline_more_horiz_24"
                        app:tint="#1E88E5" />

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="41dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/friend_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/corner_timeline"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/timeline_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TimeLine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_baseline_dehaze_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:text="About" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:src="@drawable/freind5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:text="Friend" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:src="@drawable/photo_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:gravity="center"
                    android:text="Friends" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/more_icon" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="35sp"
                android:layout_height="38sp"
                android:layout_marginStart="20dp"
                android:src="@drawable/avril_lavigne"
                app:shapeAppearanceOverlay="@style/corner2" />

            <TextView
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/corner_write_somethink"
                android:padding="8dp"

                android:text="@string/write_something_to_ali" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/corner_icon"
                android:elevation="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_iconmonstr_plus_2"
                app:tint="#1E88E5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_timeline"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:shadowColor="#000000"
                    android:shadowDx="1.9"
                    android:shadowDy="1.9"
                    android:shadowRadius="1.9"
                    android:text="Photo"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="280"
                    android:textColor="#9E9D9D" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="190dp"
                    android:background="@drawable/corner_timeline"
                    android:src="@drawable/photo_icon"
                    app:tint="#1E88E5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="5dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="90dp"
                    android:layout_height="160dp"
                    android:src="@drawable/sun"
                    app:shapeAppearanceOverlay="@style/corner" />

                <LinearLayout
                    android:layout_width="219dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="79dp"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/coofee"
                            app:shapeAppearanceOverlay="@style/corner2" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="122dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/sky"
                            app:shapeAppearanceOverlay="@style/corner2" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="115dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/pic1"
                            app:shapeAppearanceOverlay="@style/corner2" />

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="72dp"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/flower1"
                            app:shapeAppearanceOverlay="@style/corner2" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:text="See More"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                app:tint="#ACACAC" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_timeline"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:shadowColor="#000000"
                        android:shadowDx="1.9"
                        android:shadowDy="1.9"
                        android:shadowRadius="1.9"
                        android:text="Frind"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="530"
                        android:textColor="#9E9D9D" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="190dp"
                        android:background="@drawable/corner_timeline"
                        android:src="@drawable/friend_icon"
                        app:tint="#1E88E5" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/g1"
                    app:shapeAppearanceOverlay="@style/corner2" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/g4"
                    app:shapeAppearanceOverlay="@style/corner2" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/g2"
                    app:shapeAppearanceOverlay="@style/corner2" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="70dp"
                    android:layout_height="72dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/g3"
                    app:shapeAppearanceOverlay="@style/corner2" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>